<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainView">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radio_movie"
        android:orientation="horizontal"
        android:padding="8dp">

        <RadioButton
            android:id="@id/radio_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/category_movie"/>

        <RadioButton
            android:id="@+id/radio_famous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/category_famous"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="4dp">

        <ViewSwitcher
            android:id="@+id/my_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/r2d2_icon"
                android:drawablePadding="16dp"
                android:drawableRight="@mipmap/avatar"
                android:gravity="center_vertical"
                android:onClick="textViewClicked"
                android:text="@string/user_default_string"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/hidden_edit_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="type here">
            </EditText>
        </ViewSwitcher>


        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="12sp"
            tools:text="Quote Source"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sword"/>


    <TextView
        android:id="@+id/translation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:drawableLeft="@mipmap/avatar"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/yoda_square"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@string/yoda_default_string"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/retrieveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:onClick="retrieveQuote"
        android:text="@string/translate_command"/>


</LinearLayout>
