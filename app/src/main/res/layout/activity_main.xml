<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainView">


    <ViewSwitcher
        android:id="@+id/my_switcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="textViewClicked"
            android:text="@string/type_hint"
            android:textColor="#f4ffffff"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/hidden_edit_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/type_hint"
            android:textColor="#f4e6c81f">
        </EditText>
    </ViewSwitcher>


    <TextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="#f4ffffff"
        android:textSize="12sp"
        tools:text="Quote Source"/>


    <TextView
        android:id="@+id/translation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@string/yoda_default_string"
        android:textColor="#f4ffffff"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <CheckBox
            android:id="@+id/check_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:onClick="onCategoryClicked"
            android:text="@string/category_movie"
            android:textColor="#edfde90e"
            android:theme="@style/checkBoxStyle"/>

        <ImageView
            android:id="@+id/retrieveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/check_movie"
            android:layout_toRightOf="@id/check_movie"
            android:gravity="center"
            android:onClick="retrieveQuote"
            android:paddingEnd="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingStart="32dp"
            android:src="@drawable/sunstar_shadowstone"/>

        <CheckBox
            android:id="@+id/check_famous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/retrieveBtn"
            android:layout_toRightOf="@id/retrieveBtn"
            android:gravity="center"
            android:onClick="onCategoryClicked"
            android:text="@string/category_famous"
            android:textColor="#edfde90e"
            android:theme="@style/checkBoxStyle"/>

    </RelativeLayout>


</LinearLayout>
