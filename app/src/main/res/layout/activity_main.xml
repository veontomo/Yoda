<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainView">


    <ViewSwitcher
        android:id="@+id/my_switcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="textViewClicked"
            android:text="@string/user_default_string"
            android:textColor="#f4ffffff"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/hidden_edit_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="type here">
        </EditText>
    </ViewSwitcher>


    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="#f4ffffff"
        android:textSize="12sp"
        tools:text="Quote Source"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/sword"/>


    <TextView
        android:id="@+id/translation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@string/yoda_default_string"
        android:textColor="#f4ffffff"
        android:textSize="20sp"/>


    <ImageView
        android:id="@+id/retrieveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:onClick="retrieveQuote"
        android:src="@drawable/sunstar_shadowstone"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radio_movie"
        android:orientation="horizontal"
        android:padding="8dp">

        <RadioButton
            android:id="@id/radio_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMovieClicked"
            android:text="@string/category_movie"
            android:textColor="#edfde90e"/>

        <RadioButton
            android:id="@+id/radio_famous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onFamousClicked"
            android:text="@string/category_famous"
            android:textColor="#edfde90e"/>
    </RadioGroup>


</LinearLayout>
