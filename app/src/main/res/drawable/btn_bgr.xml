<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="@color/yellow"
                />
            <padding
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp"
                />

            <stroke
                android:width="1dp"
                android:color="@color/yellow2"
                />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="@color/yellowFade"
                />
            <padding
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp"
                />

            <stroke
                android:width="1dp"
                android:color="@color/yellow2"
                />
        </shape>
    </item>


</selector>